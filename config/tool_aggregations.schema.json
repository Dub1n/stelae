{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://stelae.dev/schemas/tool_aggregations.schema.json",
  "title": "Stelae Tool Aggregations",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "aggregations"],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "proxyURL": {
      "type": "string",
      "format": "uri"
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "selectorField": {"type": "string", "minLength": 1},
        "caseInsensitiveSelector": {"type": "boolean"},
        "timeoutSeconds": {"type": "number", "exclusiveMinimum": 0},
        "proxyURL": {"type": "string", "format": "uri"},
        "serverName": {"type": "string", "minLength": 1}
      }
    },
    "hiddenTools": {
      "type": "array",
      "items": {"$ref": "#/$defs/hiddenTool"}
    },
    "aggregations": {
      "type": "array",
      "minItems": 0,
      "items": {"$ref": "#/$defs/aggregation"}
    }
  },
  "$defs": {
    "hiddenTool": {
      "type": "object",
      "required": ["server", "tool"],
      "additionalProperties": false,
      "properties": {
        "server": {"type": "string", "minLength": 1},
        "tool": {"type": "string", "minLength": 1},
        "reason": {"type": "string"}
      }
    },
    "mappingRule": {
      "type": "object",
      "required": ["target"],
      "additionalProperties": false,
      "properties": {
        "target": {"type": "string", "minLength": 1},
        "source": {"type": "string", "minLength": 1},
        "from": {"type": "string", "minLength": 1},
        "value": {},
        "literal": {},
        "default": {},
        "required": {"type": "boolean"},
        "allowNull": {"type": "boolean"},
        "stripIfNull": {"type": "boolean"}
      }
    },
    "operation": {
      "type": "object",
      "required": ["value", "downstreamTool"],
      "additionalProperties": false,
      "properties": {
        "value": {"type": "string", "minLength": 1},
        "downstreamTool": {"type": "string", "minLength": 1},
        "downstreamServer": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "aliases": {
          "type": "array",
          "items": {"type": "string", "minLength": 1}
        },
        "timeoutSeconds": {"type": "number", "exclusiveMinimum": 0},
        "argumentMappings": {
          "type": "array",
          "items": {"$ref": "#/$defs/mappingRule"}
        },
        "responseMappings": {
          "type": "array",
          "items": {"$ref": "#/$defs/mappingRule"}
        },
        "requireAnyOf": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string", "minLength": 1}
          }
        }
      }
    },
    "aggregation": {
      "type": "object",
      "required": ["name", "description", "inputSchema", "operations"],
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string", "minLength": 1},
        "annotations": {"type": "object"},
        "inputSchema": {"type": "object"},
        "outputSchema": {"type": ["object", "null"]},
        "selector": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "field": {"type": "string", "minLength": 1},
            "caseInsensitive": {"type": "boolean"}
          }
        },
        "timeoutSeconds": {"type": "number", "exclusiveMinimum": 0},
        "proxyURL": {"type": "string", "format": "uri"},
        "server": {"type": "string", "minLength": 1},
        "serverName": {"type": "string", "minLength": 1},
        "operations": {
          "type": "array",
          "minItems": 1,
          "items": {"$ref": "#/$defs/operation"}
        },
        "state": {"$ref": "#/$defs/stateConfig"},
        "hideTools": {
          "type": "array",
          "items": {"$ref": "#/$defs/hiddenTool"}
        }
      }
    },
    "stateConfig": {
      "type": "object",
      "required": ["path", "operations"],
      "additionalProperties": false,
      "properties": {
        "path": {"type": "string", "minLength": 1},
        "defaults": {"type": "object"},
        "fields": {
          "type": "object",
          "additionalProperties": {"$ref": "#/$defs/stateField"}
        },
        "operations": {
          "type": "array",
          "items": {"$ref": "#/$defs/stateOperation"}
        }
      }
    },
    "stateField": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string", "enum": ["path", "list", "value"]},
        "root": {"type": "string"},
        "maxLength": {"type": "integer", "minimum": 1}
      }
    },
    "valueSource": {
      "type": "object",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string", "enum": ["argument", "literal", "state"]},
        "path": {"type": "string", "minLength": 1},
        "key": {"type": "string", "minLength": 1},
        "value": {}
      }
    },
    "statePreload": {
      "type": "object",
      "required": ["argument", "stateKey"],
      "additionalProperties": false,
      "properties": {
        "argument": {"type": "string", "minLength": 1},
        "stateKey": {"type": "string", "minLength": 1},
        "onlyIfMissing": {"type": "boolean"}
      }
    },
    "stateMutation": {
      "type": "object",
      "oneOf": [
        {
          "required": ["action", "key", "source"],
          "properties": {
            "action": {"const": "set"},
            "key": {"type": "string", "minLength": 1},
            "source": {"$ref": "#/$defs/valueSource"},
            "asPath": {"type": "boolean"},
            "relativeToCurrent": {"type": "boolean"},
            "requireExists": {"type": "boolean"}
          }
        },
        {
          "required": ["action", "key", "value"],
          "properties": {
            "action": {"const": "append"},
            "key": {"type": "string", "minLength": 1},
            "value": {
              "type": "object",
              "additionalProperties": {"$ref": "#/$defs/valueSource"}
            },
            "maxLength": {"type": "integer", "minimum": 1}
          }
        }
      ]
    },
    "stateResponse": {
      "type": "object",
      "required": ["type", "key"],
      "additionalProperties": false,
      "properties": {
        "type": {"type": "string", "enum": ["value", "history"]},
        "key": {"type": "string", "minLength": 1},
        "template": {"type": "string"},
        "structuredField": {"type": "string"},
        "maxArgument": {"type": "string", "minLength": 1}
      }
    },
    "stateOperation": {
      "type": "object",
      "required": ["value"],
      "additionalProperties": false,
      "properties": {
        "value": {"type": "string", "minLength": 1},
        "mode": {"type": "string", "enum": ["passthrough", "state_only"]},
        "preloadArguments": {
          "type": "array",
          "items": {"$ref": "#/$defs/statePreload"}
        },
        "mutations": {
          "type": "array",
          "items": {"$ref": "#/$defs/stateMutation"}
        },
        "response": {"$ref": "#/$defs/stateResponse"}
      }
    }
  }
}
