{
  "mcpProxy": {
    "baseURL": "{{PUBLIC_BASE_URL}}",
    "addr": ":9090",
    "name": "stelae",
    "version": "1.0.0",
    "type": "streamable-http",
    "options": {
      "panicIfInvalid": true,
      "logEnabled": true,
      "enableManifest": true
    }
  },
  "manifest": {
    "name": "stelae",
    "version": "1.0.0",
    "description": "Local MCP stack",
    "publicBaseURL": "{{PUBLIC_BASE_URL}}",
    "serverName": "stelae",
    "resources": [],
    "toolOverridesPath": "{{STELAE_DIR}}/config/tool_overrides.json",
    "toolSchemaStatusPath": "{{STELAE_DIR}}/config/tool_schema_status.json"
  },
  "mcpServers": {
    "fs": {
      "type": "stdio",
      "command": "{{FILESYSTEM_BIN}}",
      "args": [
        "{{STELAE_DIR}}"
      ]
    },
    "rg": {
      "type": "stdio",
      "command": "{{RG_BIN}}",
      "args": [
        "--stdio",
        "--root",
        "{{STELAE_DIR}}"
      ]
    },
    "sh": {
      "type": "stdio",
      "command": "{{SHELL_BIN}}",
      "args": [
        "--workdir",
        "{{PHOENIX_ROOT}}",
        "--allow",
        "npm,pytest,make,python,git"
      ]
    },
    "docs": {
      "type": "stdio",
      "command": "{{DOCY_BIN}}",
      "args": [
        "--stdio"
      ]
    },
    "docy_manager": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/docy_manager_server.py"
      ],
      "env": {
        "STELAE_DOCY_CATALOG": "{{STELAE_DIR}}/config/docy_sources.json",
        "STELAE_DOCY_URL_FILE": "{{STELAE_DIR}}/.docy.urls"
      }
    },
    "mem": {
      "type": "stdio",
      "command": "{{MEMORY_BIN}}",
      "args": [
        "--project",
        "{{BASIC_MEMORY_PROJECT}}",
        "mcp",
        "--transport",
        "stdio"
      ]
    },
    "fetch": {
      "type": "http",
      "command": "{{LOCAL_BIN}}/mcp-server-fetch"
    },
    "scrapling": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "scrapling-fetch-mcp",
        "--stdio"
      ],
      "env": {
        "PATH": "{{ PATH }}",
        "PLAYWRIGHT_BROWSERS_PATH": "{{PLAYWRIGHT_BROWSERS_PATH}}"
      }
    },
    "strata": {
      "type": "stdio",
      "command": "{{STRATA_BIN}}"
    },
    "one_mcp": {
      "type": "stdio",
      "command": "{{ONE_MCP_BIN}}",
      "args": [
        "--directory",
        "{{ONE_MCP_DIR}}",
        "run",
        "server.py",
        "--local"
      ]
    },
    "custom": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/custom_tools_server.py"
      ],
      "env": {
        "STELAE_CUSTOM_TOOLS_CONFIG": "{{STELAE_DIR}}/config/custom_tools.json"
      }
    }
  }
}
