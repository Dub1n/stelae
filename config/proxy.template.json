{
  "mcpProxy": {
    "baseURL": "{{PUBLIC_BASE_URL}}",
    "addr": ":{{PROXY_PORT}}",
    "name": "stelae",
    "version": "1.0.0",
    "type": "streamable-http",
    "options": {
      "panicIfInvalid": true,
      "logEnabled": true,
      "enableManifest": true
    }
  },
  "manifest": {
    "name": "stelae",
    "version": "1.0.0",
    "description": "Local MCP stack",
    "publicBaseURL": "{{PUBLIC_BASE_URL}}",
    "serverName": "stelae",
    "resources": [],
    "toolOverridesPath": "{{TOOL_OVERRIDES_PATH}}",
    "toolSchemaStatusPath": "{{TOOL_SCHEMA_STATUS_PATH}}"
  },
  "mcpServers": {
    "custom": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/custom_tools_server.py"
      ],
      "env": {
        "STELAE_CUSTOM_TOOLS_CONFIG": "{{STELAE_CONFIG_HOME}}/custom_tools.json"
      }
    },
    "integrator": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/stelae_integrator_server.py"
      ],
      "env": {
        "STELAE_DISCOVERY_PATH": "{{STELAE_DISCOVERY_PATH}}"
      }
    },
    "one_mcp": {
      "type": "stdio",
      "command": "{{ONE_MCP_BIN}}",
      "args": [
        "--directory",
        "{{ONE_MCP_DIR}}",
        "run",
        "server.py",
        "--local"
      ]
    },
    "public_mcp_catalog": {
      "type": "http",
      "url": "https://mcp.1mcpserver.com/mcp/",
      "headers": {
        "Accept": "text/event-stream",
        "Cache-Control": "no-store"
      },
      "options": {
        "enableAsync": false
      }
    },
    "tool_aggregator": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/tool_aggregator_server.py"
      ],
      "env": {
        "STELAE_TOOL_AGGREGATIONS": "{{STELAE_DIR}}/config/tool_aggregations.json"
      }
    }
  }
}
