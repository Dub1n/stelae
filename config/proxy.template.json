{
  "mcpProxy": {
    "baseURL": "{{PUBLIC_BASE_URL}}",
    "addr": ":9090",
    "name": "stelae",
    "version": "1.0.0",
    "type": "streamable-http",
    "options": {
      "panicIfInvalid": true,
      "logEnabled": true,
      "enableManifest": true
    }
  },
  "manifest": {
    "name": "stelae",
    "version": "1.0.0",
    "description": "Local MCP stack",
    "publicBaseURL": "{{PUBLIC_BASE_URL}}",
    "serverName": "stelae",
    "resources": [],
    "toolOverridesPath": "{{STELAE_DIR}}/config/tool_overrides.json"
  },
  "mcpServers": {
    "fs": {
      "type": "stdio",
      "command": "{{FILESYSTEM_BIN}}",
      "args": [
        "{{STELAE_DIR}}"
      ]
    },
    "rg": {
      "type": "stdio",
      "command": "{{RG_BIN}}",
      "args": [
        "--stdio",
        "--root",
        "{{STELAE_DIR}}"
      ]
    },
    "sh": {
      "type": "stdio",
      "command": "{{SHELL_BIN}}",
      "args": [
        "--workdir",
        "{{PHOENIX_ROOT}}",
        "--allow",
        "npm,pytest,make,python,git"
      ]
    },
    "docs": {
      "type": "stdio",
      "command": "{{DOCY_BIN}}",
      "args": [
        "--stdio"
      ]
    },
    "mem": {
      "type": "stdio",
      "command": "{{MEMORY_BIN}}",
      "args": [
        "--project",
        "{{BASIC_MEMORY_PROJECT}}",
        "mcp",
        "--transport",
        "stdio"
      ]
    },
    "fetch": {
      "type": "http",
      "command": "{{LOCAL_BIN}}/mcp-server-fetch"
    },
    "strata": {
      "type": "stdio",
      "command": "{{STRATA_BIN}}"
    },
    "one_mcp": {
      "type": "stdio",
      "command": "{{ONE_MCP_BIN}}",
      "args": [
        "--directory",
        "{{ONE_MCP_DIR}}",
        "run",
        "server.py",
        "--local"
      ]
    }
  }
}
