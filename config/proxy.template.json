{
  "mcpProxy": {
    "baseURL": "{{PUBLIC_BASE_URL}}",
    "addr": ":9090",
    "name": "stelae",
    "version": "1.0.0",
    "type": "streamable-http",
    "options": {
      "panicIfInvalid": true,
      "logEnabled": true,
      "enableManifest": true
    }
  },
  "manifest": {
    "name": "stelae",
    "version": "1.0.0",
    "description": "Local MCP stack",
    "publicBaseURL": "{{PUBLIC_BASE_URL}}",
    "serverName": "stelae",
    "resources": [],
    "toolOverridesPath": "{{TOOL_OVERRIDES_PATH}}",
    "toolSchemaStatusPath": "{{TOOL_SCHEMA_STATUS_PATH}}"
  },
  "mcpServers": {
    "custom": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/custom_tools_server.py"
      ],
      "env": {
        "STELAE_CUSTOM_TOOLS_CONFIG": "{{STELAE_DIR}}/config/custom_tools.json"
      }
    },
    "docs": {
      "type": "stdio",
      "command": "{{DOCY_BIN}}",
      "args": [
        "--stdio"
      ]
    },
    "docy_manager": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/docy_manager_server.py"
      ],
      "env": {
        "STELAE_DOCY_CATALOG": "{{STELAE_DIR}}/config/docy_sources.json",
        "STELAE_DOCY_URL_FILE": "{{STELAE_DIR}}/.docy.urls"
      }
    },
    "tool_aggregator": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/tool_aggregator_server.py"
      ],
      "env": {
        "STELAE_TOOL_AGGREGATIONS": "{{STELAE_DIR}}/config/tool_aggregations.json"
      }
    },
    "fetch": {
      "type": "http",
      "command": "{{LOCAL_BIN}}/mcp-server-fetch"
    },
    "fs": {
      "type": "stdio",
      "command": "{{FILESYSTEM_BIN}}",
      "args": [
        "{{STELAE_DIR}}"
      ]
    },
    "integrator": {
      "type": "stdio",
      "command": "{{PYTHON}}",
      "args": [
        "{{STELAE_DIR}}/scripts/stelae_integrator_server.py"
      ],
      "env": {
        "STELAE_DISCOVERY_PATH": "{{STELAE_DISCOVERY_PATH}}"
      }
    },
    "mem": {
      "type": "stdio",
      "command": "{{MEMORY_BIN}}",
      "args": [
        "--project",
        "{{BASIC_MEMORY_PROJECT}}",
        "mcp",
        "--transport",
        "stdio"
      ]
    },
    "one_mcp": {
      "type": "stdio",
      "command": "{{ONE_MCP_BIN}}",
      "args": [
        "--directory",
        "{{ONE_MCP_DIR}}",
        "run",
        "server.py",
        "--local"
      ]
    },
    "public_mcp_catalog": {
      "type": "http",
      "url": "https://mcp.1mcpserver.com/mcp/",
      "headers": {
        "Accept": "text/event-stream",
        "Cache-Control": "no-store"
      },
      "options": {
        "enableAsync": false
      }
    },
    "rg": {
      "type": "stdio",
      "command": "{{RG_BIN}}",
      "args": [
        "--stdio",
        "--root",
        "{{STELAE_DIR}}"
      ]
    },
    "scrapling": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "scrapling-fetch-mcp",
        "--stdio"
      ],
      "env": {
        "PATH": "{{ PATH }}",
        "PLAYWRIGHT_BROWSERS_PATH": "{{PLAYWRIGHT_BROWSERS_PATH}}"
      }
    },
    "sh": {
      "type": "stdio",
      "command": "{{SHELL_BIN}}",
      "args": [
        "--workdir",
        "{{PHOENIX_ROOT}}",
        "--allow",
        "npm,pytest,make,python,git"
      ]
    },
    "strata": {
      "type": "stdio",
      "command": "{{STRATA_BIN}}"
    }
  }
}
