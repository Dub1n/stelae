{
  "mcpProxy": {
    "baseURL": "{{PUBLIC_BASE_URL}}",
    "addr": ":9090",
    "name": "Stelae MCP Proxy",
    "version": "1.0.0",
    "type": "sse",
    "options": {
      "panicIfInvalid": true,
      "logEnabled": true,
      "enableManifest": true
    }
  },
  "manifest": {
    "name": "Stelae MCP Proxy",
    "version": "1.0.0",
    "description": "Local MCP stack",
    "publicBaseURL": "{{PUBLIC_BASE_URL}}",
    "sseEndpoint": "{{PUBLIC_SSE_URL}}",
    "resources": []
  },
  "mcpServers": {
    "fs": {
      "command": "{{FILESYSTEM_BIN}}",
      "args": [
        "--root",
        "{{STELAE_DIR}}"
      ]
    },
    "rg": {
      "command": "{{RG_BIN}}",
      "args": [
        "--stdio",
        "--root",
        "{{STELAE_DIR}}"
      ]
    },
    "sh": {
      "command": "{{SHELL_BIN}}",
      "args": [
        "--workdir",
        "{{PHOENIX_ROOT}}",
        "--allow",
        "npm,pytest,make,python,git"
      ]
    },
    "docs": {
      "command": "{{DOCY_BIN}}",
      "args": [
        "--stdio"
      ]
    },
    "mem": {
      "command": "{{MEMORY_BIN}}",
      "args": [
        "--project",
        "{{BASIC_MEMORY_PROJECT}}",
        "mcp",
        "--transport",
        "stdio"
      ]
    },
    "search": {
      "command": "{{SEARCH_PYTHON_BIN}}",
      "args": ["{{STELAE_DIR}}/scripts/stelae_search_mcp.py"],
      "env": {
        "STELAE_SEARCH_ROOT": "{{SEARCH_ROOT}}",
        "STELAE_RG_BIN": "rg"
      }
    },
    "fetch": {
      "command": "{{LOCAL_BIN}}/mcp-server-fetch"
    },
    "strata": {
      "command": "{{STRATA_BIN}}"
    }
  }
}
